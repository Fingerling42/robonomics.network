---
// components
import Layout from "../layouts/Layout.astro";
import BooksList from '../components/books/BooksList.vue';
import RecommendationItem from '../components/books/RecommendationItem.astro';
import BooksFooter from '../components/books/BooksFooter.astro';


const recs = [
  {
    title: $tr('The Nature of the Firm'),
    author: $tr('R. H. Coase'),
    link: 'https://onlinelibrary.wiley.com/doi/full/10.1111/j.1468-0335.1937.tb00002.x',
    id: 0,
  },
  {
    title: $tr('Cybernetics : Control and Communication in the Animal and the Machine'),
    author: $tr('Norbert Wiener'),
    link: 'https://duckduckgo.com/?q=Cybernetics+%3A+Control+and+Communication+in+the+Animal+and+the+Machine+â€“2nd.+ed+Norbert+Wiener&t=h_&ia=web',
    id: 1,
  },
  {
    title: $tr('Research works from Institute of Cybernetics'),
    author: $tr('V.M. Glushkov'),
    link: 'https://duckduckgo.com/?q=Research+works+from+Institute+of+Cybernetics+V.M.+Glushkov&ia=webn',
    id: 2,
  },
  {
    title: $tr('Human Action'),
    author: $tr('Ludwig von Mises'),
    link: 'https://mises.org/library/human-action-0',
    id: 3,
  },
  {
    title: $tr('Do androids dream of electric sheep?'),
    author: $tr('Philip K. Dick'),
    link: 'https://duckduckgo.com/?q=Do+androids+dream+of+electric+sheep%3F+Philip+K.+Dick&t=h_&ia=web',
    id: 4,
  },
  {
    title: $tr('Autofac'),
    author: $tr('Philip K. Dick'),
    link: 'https://duckduckgo.com/?q=Autofac+Philip+K.+Dick&t=h_&ia=web',
    id: 5,
  },
  {
    title: $tr('The Bicentennial Man'),
    author: $tr('Isaac Asimov'),
    link: 'https://duckduckgo.com/?q=The+bicentennial+man++Isaac+Asimov&t=h_&ia=web',
    id: 6,
  },
  {
    title: $tr('Marionettes Inc.'),
    author: $tr('Ray Bradbury'),
    link: 'https://duckduckgo.com/?q=Marionettes+Inc.+Ray+Bradbury&t=h_&ia=web',
    id: 7,
  }
]

---

<Layout
  title={$tr("Books")}
  ogImage="/website_cover_books.webp"
  pageTitle={$tr("Read books")}
>
  <section class="layout layout__content e-books">
    <div class="layout__text books__abstract">
      <p>{$tr("We think reading books can really open up your mind. Whether it's simple but smart ideas or more complex ones, books are the best way for your brain to soak it all in. You can grab our books for free and check out our list of recommended reads to dive into the exciting world of robotics!")}</p>
    </div>
    <BooksList client:only />
  </section>

  <section class="layout books-recommendations layout__content">
    <h2>{$tr('Open your mind [list of recommendations]')}</h2>
    <ol class="list-simple">
      {recs.map((rec) => (
        <li class="books-recommendations__item">
          <RecommendationItem rec={rec} />
        </li>
      ))}
    </ol>
  </section>

  <section class="books-footer__container layout layout__text">
    <BooksFooter />
  </section>

</Layout>


<style>

  .e-books {
    margin-bottom: calc(var(--space) * 4);
  }


  h2 {
    text-align: left;
    font-family:var(--font-family);
    font-weight: 900;
    text-transform: none;
    letter-spacing: 0;
  }

  .books__abstract {
    font-weight: 500;
    font-style: italic;
    margin-bottom: calc(var(--space) * 4);
  }

  .books-recommendations__item {
    background-color: var(--color-light);
  }

  .books-recommendations__item:not(:last-of-type) {
    margin-bottom: calc(var(--space) * 0.5);
  }

  .books-recommendations h2 {
    margin-bottom: calc(var(--space) * 0.8);
  }

  .books-footer__container {
    max-width: 586px;
  }

</style>
